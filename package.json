{
  "name": "book-store-api",
  "version": "1.0.0",
  "description": "Bookstore API is a RESTful API. It provides endpoints for managing books, authors, and users.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:files\" \"npm run serve\"",
    "watch:ts": "tsc --watch",
    "watch:files": "npm run copy-files -- --watch",
    "serve": "nodemon dist/index.js",
    "build": "npm run clean && npm run lint && npm run format && npm run copy-files && tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "copy-files": "copyfiles -u 1 \"src/templates/**\" dist/",
    "prepare": "husky"
  },
  "keywords": [
    "Node",
    "Express",
    "PostgreSQL",
    "Knex",
    "TypeScript"
  ],
  "author": "Bablu Mia",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^9.7.0",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.2",
    "cookie-parser": "^1.4.7",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "http-status": "^2.0.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "nodemailer": "^6.9.16",
    "pg": "^8.15.6",
    "rimraf": "^6.0.1",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/nodemailer": "^6.4.17",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "module-alias": "^2.2.3",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "_moduleAliases": {
    "@": "dist",
    "@config": "dist/config",
    "@database": "dist/database",
    "@routes": "dist/routes",
    "@middlewares": "dist/middlewares",
    "@modules": "dist/modules",
    "@services": "dist/services",
    "@utils": "dist/utils"
  }
}
